<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity.ChatUrls">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/bold"
        android:text="Whatsapp Chat Url"
        android:textColor="@color/gray"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/current_url"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:textColor="@color/red"
        android:textSize="19dp" />

    <EditText

        android:id="@+id/chat_url"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:hint="New Url"
        android:inputType="text"
        android:textIsSelectable="true"
        android:paddingStart="19dp"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray"
        android:layout_below="@id/current_url"
        android:layout_marginTop="50dp"
        android:autofillHints="hello" />




    <Button
        android:id="@+id/update_chat"
        android:layout_width="130dp"
        android:layout_height="60dp"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/chat_url"
        android:layout_marginTop="40dp"
        android:background="@drawable/default_button"
        android:fontFamily="@font/medium"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp" />


</RelativeLayout>